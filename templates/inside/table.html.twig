{% block table %}
    <div>
        <table class="largeTable">
            <tr>
                <th>Pavadinimas</th>
                <th>Kategorija</th>
                <th>Etiketės</th>
                <th>Priedai</th>
                <th>Galioja nuo</th>
                <th>Galioja iki</th>
                <th>Priminimas</th>
                <th>Pastabos</th>
                <th colspan="2">Veiksmai</th>
            </tr>
            {% for file in files %}

                <tr>
                    <td>{{ file.documentName }}</td>
                    <td>{{ file.getCategory().getCategoryName() }}</td>
                    <td>Etiketės </td>
                    <td>Files </td>
                    
                    {% if file.DocumentDate == NULL %}
                        <td></td>
                        {% else %}
                            <td>{{ file.DocumentDate | date("Y-m-d") }}</td>
                    {% endif %}
                    {% if file.DocumentExpires == NULL %}
                        <td></td>
                    {% else %}
                        <td>{{ file.DocumentExpires|date("Y-m-d") }}</td>
                    {% endif %}
                    {% if file.DocumentReminder == NULL %}
                        <td></td>
                    {% else %}
                        <td>{{ file.DocumentReminder|date("Y-m-d") }}</td>
                    {% endif %}
                    {% if file.DocumentNotes == NULL %}
                        <td></td>
                    {% else %}
                        <td>{{ file.DocumentNotes }}</td>
                    {% endif %}
                    <td>
                        <a href=""><img class="edit" src="{{ asset('images/edit1.png') }}" alt="Redagavimas" title="Redaguoti" data-id="{{ file.id }}"/></a>
                        <a href="#"><img class="delete" src="{{ asset('images/delete.png') }}" alt="Ištrinimas" title="Ištrinti įrašą" data-id="{{ file.id }}"/></a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <table class="smallTable" id="smallTable">
            <tr>
                <th colspan="2">Pavadinimas</th>
                <th>Kategorija</th>
                <th colspan="2">Veiksmai</th>
            </tr>

            {% for file in files %}
                <tr>
                    <td><a href="javascript:toggle({{ loop.index }})"><img src="{{ asset('images/show-more-button.png') }}" id="imgClickAndChange{{ loop.index }}" alt="Rodyti daugiau" title="Rodyti daugiau"/></a></td>
                    <td>{{ file.DocumentName}}</td>
                    {#<td>{{ file.getCategoryId() }}</td>#}
                    <td>Kategorija 1</td>
                    <td>
                        <a href="javascript:display()"><img src="{{ asset('images/edit1.png') }}" alt="Redagavimas" title="Redaguoti"/></a>
                    </td>
                    <td>
                        <a href="#"><img src="{{ asset('images/delete.png') }}" alt="Ištrinimas" title="Ištrinti įrašą"/></a>
                    </td>
                </tr>
                <tr id="displayMoreData{{ loop.index }}" class="displayMoreData">
                    <td></td>
                    <td colspan="4">
                        <b>Etiketės: </b>Etiketės<br>
                        <b>Priedai: </b>Files<br>
                        <b>Galioja nuo: </b>{{ file.DocumentDate | date("Y-m-d") }}<br>
                        <b>Galioja iki: </b>{{ file.DocumentExpires | date("Y-m-d") }}<br>
                        <b>Priminimas: </b> {{ file.DocumentReminder | date("Y-m-d") }}<br>
                        <b>Pastabos: </b>Pastabos
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}