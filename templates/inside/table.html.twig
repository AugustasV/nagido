{% block table %}
    <div>
        <table class="largeTable">
            <tr>
                <th>Pavadinimas</th>
                <th>Kategorija</th>
                <th>Etiketės</th>
                <th>Priedai</th>
                <th>Galioja nuo</th>
                <th>Galioja iki</th>
                <th>Priminimas</th>
                <th>Pastabos</th>
                <th colspan="2">Veiksmai</th>
            </tr>

            {% for file in files %}
                <tr>
                    <td>{{ file.getDocName() }}</td>
                    {#<td>{{ file.getCategoryId() }}</td>#}
                    <td>Kategorija 1</td>
                    <td>Etiketės </td>
                    <td>Files </td>
                    
                    {% if file.DocDate == NULL %}
                        <td></td>
                    {% else %}
                        <td>{{ file.DocDate|date("Y-m-d") }}</td>
                    {% endif %}

                    {% if file.DocExpires == NULL %}
                        <td></td>
                    {% else %}
                        <td>{{ file.DocExpires|date("Y-m-d") }}</td>
                    {% endif %}

                    {% if file.DocReminder == NULL %}
                        <td></td>
                    {% else %}
                        <td>{{ file.DocReminder|date("Y-m-d") }}</td>
                    {% endif %}

                    <td></td>
                    <td>
                        <span><img class="edit" src="{{ asset('images/edit1.png') }}" alt="Redagavimas" title="Redaguoti" data-id="{{ file.id }}"/></span>
                        <span><img class="delete" src="{{ asset('images/delete.png') }}" alt="Ištrinimas" title="Ištrinti įrašą" data-id="{{ file.id }}"/></span>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <table class="smallTable" id="smallTable">
            <tr>
                <th colspan="2">Pavadinimas</th>
                <th>Kategorija</th>
                <th colspan="2">Veiksmai</th>
            </tr>

            {% for file in files %}
                <tr>
                    <td><span class="clickAndChange" data-row-nr="{{ loop.index }}"><img src="{{ asset('images/show-more-button.png') }}"
                                                               id="imgClickAndChange{{ loop.index }}" alt="Rodyti daugiau" title="Rodyti daugiau"/></span></td>
                    <td>{{ file.getDocName() }}</td>
                    {#<td>{{ file.getCategoryId() }}</td>#}
                    <td>Kategorija 1</td>
                    <td>
                        <span><img class="edit" src="{{ asset('images/edit1.png') }}" alt="Redagavimas" title="Redaguoti" data-id="{{ file.id }}"/></span>
                        <span><img class="delete" src="{{ asset('images/delete.png') }}" alt="Ištrinimas" title="Ištrinti įrašą" data-id="{{ file.id }}"/></span>
                    </td>
                </tr>
                <tr id="displayMoreData{{ loop.index }}" class="displayMoreData">
                    <td></td>
                    <td colspan="4">
                        <b>Etiketės: </b>Etiketės<br>
                        <b>Priedai: </b>Files<br>
                        <b>Galioja nuo: </b>{{ file.getDocDate()|date("Y-m-d") }}<br>
                        <b>Galioja iki: </b>{{ file.getDocExpires()|date("Y-m-d") }}<br>
                        <b>Priminimas: </b> {{ file.getDocReminder()|date("Y-m-d") }}<br>
                        <b>Pastabos: </b>Pastabos
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}