{% block editDocument %}

    <div id="editDocumentWindow" class="newDocumentWindow">
        <div class="newWindow">
            <form action="{{ path('update') }}" method="POST">
                <input id="editId" type="hidden" name="documentId" value="">
                <input id="name" name="documentName" type="text">
                <select name="documentCategory" id="category">
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.categoryName }}</option>
                    {% endfor %}
                </select>
                <input type="date" name="documentDate" id="date">
                <input type="date" name="documentExpires" id="expires">
                <input type="date" name="documentReminder" id="reminder">
                <textarea style="width: 100%" name="documentNotes" id="notes" cols="30" rows="10"></textarea>
